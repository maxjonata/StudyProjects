{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "bin/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build JAVA",
            "type": "shell",
            "command": "javac",
            "args": [
                "${file}",
                "-d",
                "${workspaceFolder}\\bin"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}